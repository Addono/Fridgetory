{
  "name": "fridgetory",
  "version": "2.5.0",
  "private": false,
  "license": "MIT",
  "scripts": {
    "start": "next start -p $PORT",
    "dev": "next dev",
    "test": "yarn build",
    "build": "yarn prisma:generate && yarn nexus build && next build",
    "nexus:reflection": "nexus dev --reflection --entrypoint pages/api/graphql.ts",
    "nexus:check": "yarn nexus:build",
    "nexus:build": "nexus build --entrypoint pages/api/graphql.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate up --experimental",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": "^14"
  },
  "dependencies": {
    "@apollo/client": "^3.2.5",
    "antd": "^4.6.6",
    "apollo-cache-persist": "^0.1.1",
    "next": "^10.0.0",
    "next-pwa": "^3.1.5",
    "nexus": "^0.26.1",
    "nexus-plugin-prisma": "^0.19.0",
    "node-fetch": "^2.6.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-lottie": "^1.2.3",
    "typescript": "^4.0.5"
  },
  "resolutions": {
    "graphql": "^15.2.0",
    "antd/**/rc-virtual-list": "^3.0.9"
  },
  "devDependencies": {
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.55",
    "husky": ">=4",
    "lint-staged": "^10.5.0",
    "prettier": "^2.1.2",
    "semantic-release": "^17.2.2"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn typecheck"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,yml,yaml,css,md}": "prettier --write"
  }
}
