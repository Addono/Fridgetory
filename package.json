{
  "name": "fridgetory",
  "version": "0.1.0",
  "private": false,
  "license": "MIT",
  "scripts": {
    "start": "next start -p $PORT",
    "dev": "next dev",
    "test": "yarn build",
    "build": "yarn prisma:generate && yarn nexus build && next build",
    "nexus:reflection": "nexus dev --reflection --entrypoint pages/api/graphql.ts",
    "nexus:check": "nexus build --entrypoint pages/api/graphql.ts && nexus build --entrypoint pages/api/playground.ts",
    "prisma:generate": "prisma generate"
  },
  "dependencies": {
    "@apollo/client": "^3.0.0-beta.48",
    "@prisma/client": "2.0.0-beta.4",
    "antd": "^4.2.5",
    "apollo-cache-persist": "^0.1.1",
    "graphql": "^15.0.0",
    "next": "^9.4.2",
    "nexus": "^0.22.0",
    "nexus-plugin-prisma": "^0.8.0",
    "node-fetch": "^2.6.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "typescript": "^3.9.3"
  },
  "devDependencies": {
    "@prisma/cli": "2.0.0-beta.5",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@types/node": "^14.0.6",
    "@types/react": "^16.9.35",
    "husky": ">=4",
    "lint-staged": "^10.2.6",
    "prettier": "^2.0.5",
    "semantic-release": "^17.0.8",
    "ts-node": "^8.10.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,yaml,css,md}": "prettier --write"
  }
}
