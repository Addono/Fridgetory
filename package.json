{
  "name": "fridgetory",
  "version": "3.0.0",
  "private": false,
  "license": "MIT",
  "scripts": {
    "start": "next start -p ${PORT:-3000}",
    "dev": "next dev",
    "build": "yarn prisma:generate && yarn nexus:build && yarn next:build",
    "test": "yarn cypress:run",
    "typecheck": "yarn next:typecheck && yarn cypress:typecheck",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:typecheck": "tsc --noEmit --project cypress",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate up --experimental",
    "nexus:build": "NODE_ENV=development ts-node --transpile-only graphql/schema.ts",
    "next:build": "next build",
    "next:typecheck": "tsc --noEmit --project ."
  },
  "engines": {
    "node": "^14"
  },
  "dependencies": {
    "@apollo/client": "^3.2.5",
    "@nexus/schema": "^0.18.0",
    "@prisma/client": "^2.11.0",
    "antd": "^4.8.2",
    "apollo-cache-persist": "^0.1.1",
    "apollo-server-micro": "^2.19.0",
    "graphql": "^15.4.0",
    "next": "^10.0.1",
    "next-pwa": "^3.1.5",
    "nexus-plugin-prisma": "^0.23.1",
    "node-fetch": "^2.6.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-lottie": "^1.2.3",
    "typescript": "^4.0.5"
  },
  "resolutions": {
    "graphql": "^15.4.0",
    "antd/**/rc-virtual-list": "^3.0.9"
  },
  "devDependencies": {
    "@prisma/cli": "^2.11.0",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@types/node": "^14.14.7",
    "@types/react": "^16.9.56",
    "cypress": "^5.6.0",
    "husky": ">=4",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "semantic-release": "^17.2.2",
    "ts-node": "^9.0.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn typecheck"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,yml,yaml,css,md}": "prettier --write"
  }
}
