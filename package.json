{
  "name": "fridgetory",
  "version": "2.1.0",
  "private": false,
  "license": "MIT",
  "scripts": {
    "start": "next start -p $PORT",
    "dev": "next dev",
    "test": "yarn build",
    "build": "yarn prisma:generate && yarn nexus build && next build",
    "nexus:reflection": "nexus dev --reflection --entrypoint pages/api/graphql.ts",
    "nexus:check": "nexus build --entrypoint pages/api/graphql.ts && nexus build --entrypoint pages/api/playground.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate up --experimental",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@apollo/client": "^3.1.3",
    "antd": "^4.5.2",
    "apollo-cache-persist": "^0.1.1",
    "next": "^9.5.1",
    "next-pwa": "^3.1.1",
    "nexus": "^0.26.1",
    "nexus-plugin-prisma": "^0.17.0",
    "node-fetch": "^2.6.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-lottie": "^1.2.3",
    "typescript": "^3.9.7"
  },
  "resolution": {
    "graphql": "^15.2.0"
  },
  "devDependencies": {
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@types/node": "^14.0.27",
    "@types/react": "^16.9.44",
    "husky": ">=4",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "semantic-release": "^17.1.1",
    "ts-node": "^8.10.2"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn typecheck"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,yml,yaml,css,md}": "prettier --write"
  }
}
